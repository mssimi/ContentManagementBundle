{% extends '@ContentManagement/base.html.twig' %}

{% block title %}{{ ('block.heading')|trans }}{% endblock %}
{% block content %}
    <div class="page-header">
        <div class="page-title">
            <h3>{{ ('block.heading')|trans }}</h3>
        </div>
    </div>

    <div class="panel panel-default">
        <div class="panel-body">
            <a class="btn btn-default" href="{{ path('_mssimi_block_new') }}">{{ ('block.new')|trans }}</a>
            <form class="form-inline pull-right" action="{{ path('_mssimi_block_search_index') }}" method="get">
                <input placeholder="search by nodename" class="form-control" name="name" type="text">
                <button class="btn btn-default" type="submit">{{ ('form.common.submit')|trans }}</button>
            </form>
        </div>
    </div>

    <div class="panel panel-default">
        <div class="panel-heading">
            <h6 class="panel-title">{{ ('block.list')|trans }}</h6>
        </div>

        <div class="panel-body">
            <table class="table table-bordered">
                <tr>
                    <td>{{ ('node.name')|trans }}</td>
                    <td>{{ ('node.content')|trans }}</td>
                    <td>{{ ('form.common.tools')|trans }}</td>
                </tr>
                {% for block in blocks %}
                    <tr>
                        <td>{{ block.name }}</td>
                        <td>{{ block.content }}</td>
                        <td>{{ edit_button_render(path('_mssimi_block_edit', {'id' : block.id })) }}</td>
                    </tr>
                {% endfor %}
            </table>
        </div>
    </div>

{% endblock %}
