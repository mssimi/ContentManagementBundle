{% extends '@ContentManagement/base.html.twig' %}

{% block title %}{{ ('mssimiContentManagement.block.heading')|trans }}{% endblock %}
{% block content %}
    <div class="page-header">
        <div class="page-title">
            <h3>{{ ('mssimiContentManagement.block.heading')|trans }}</h3>
        </div>
    </div>

    <div class="panel panel-default">
        <div class="panel-body">
            <a class="btn btn-default" href="{{ path('_mssimi_block_new') }}">{{ ('mssimiContentManagement.common.new')|trans }}</a>
            <form class="form-inline pull-right" action="{{ path('_mssimi_block_search_index') }}" method="get">
                <div class="form-group">
                    <input placeholder="search by nodename" class="form-control" name="name" type="text">
                </div>
                <button class="btn btn-default" type="submit">{{ ('mssimiContentManagement.common.submit')|trans }}</button>
            </form>
        </div>
    </div>

    <div class="panel panel-default">
        <div class="panel-heading">
            <h6 class="panel-title">{{ ('mssimiContentManagement.common.list')|trans }}</h6>
        </div>

        <div class="panel-body">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>{{ ('mssimiContentManagement.node.name')|trans }}</th>
                        <th>{{ ('mssimiContentManagement.node.content')|trans }}</th>
                        <th>{{ ('mssimiContentManagement.common.tools')|trans }}</th>
                    </tr>
                </thead>
                <tbody>
                {% for block in blocks %}
                    <tr>
                        <td>{{ block.name }}</td>
                        <td>{{ block.content }}</td>
                        <td>{{ edit_button_render(path('_mssimi_block_edit', {'id' : block.id })) }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}
