{% extends '@ContentManagement/base.html.twig' %}

{% block title %}Domain{% endblock %}
{% block content %}
    <div class="page-header">
        <div class="page-title">
            <h3>{{ ('block.heading')|trans }}</h3>
        </div>
    </div>

    {{ form_start(form) }}
        <div class="panel panel-default">
            <div class="panel-heading"><h6 class="panel-title">{{ ('block.persist')|trans }}</h6></div>
            <div class="panel-body">
                {{ form_widget(form) }}
            </div>
        </div>
        <div class="form-actions text-right m-bottom-35">
            <a href="{{ path('_mssimi_block_index') }}"  class="btn btn-default" type="button"><i class="icon-backward"></i> {{ ('form.common.back')|trans }}</a>
            <button type="submit" class="btn btn-primary">{{ ('form.common.submit')|trans }}</button>
        </div>
    {{ form_end(form) }}

{% endblock %}
