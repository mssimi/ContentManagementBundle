{% extends '@ContentManagement/base.html.twig' %}

{% block title %}{{ ('page.heading')|trans }}{% endblock %}
{% block content %}
    <div class="page-header">
        <div class="page-title">
            <h3>{{ ('page.heading')|trans }}</h3>
        </div>
    </div>

    {{ form_start(form) }}
        <div class="panel panel-default">
            <div class="panel-heading"><h6 class="panel-title">{{ ('page.persist')|trans }}</h6></div>
            <div class="panel-body">
                {{ form_widget(form) }}
            </div>
        </div>
        <div class="form-actions text-right m-bottom-35">
            <a href="{{ path('_mssimi_page_index') }}"  class="btn btn-default" type="button"><i class="icon-backward"></i> {{ ('common.back')|trans }}</a>
            <button type="submit" class="btn btn-primary">{{ ('common.submit')|trans }}</button>
        </div>
    {{ form_end(form) }}

{% endblock %}
